.main_chat__message-list__message-box{data: {message: {id: message.id}}}
  .main_chat__message-list__message-box__message-info
    .main_chat__message-list__message-box__message-info__name
      = message.user.name
    .main_chat__message-list__message-box__message-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__message-list__message-box__message
    - if message.content.present?
      %p.main_chat__message-list__message-box__message__contents
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?


